<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administration</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/91b5c20a6a.js" crossorigin="anonymous"></script>
</head>
<body>
    <div id="contenedor">
        <div style="width: 20%; float:left ">
            <div class="btnsidebar"> <span class="fas fa-bars"></span></div>

            <nav class="sidebar">

                <div id="profile">
                    <div id="photo"><img src="~/img/avatar.png" alt="profile"></div>
                    <div id="name"><span>JHONATHAN LEONEL LALANGUI CAMPOVERDE</span></div>
                </div>
                <div class="separator"></div>
                <ul>
                    <li class="active"><a asp-controller="Home" asp-action="Index"><p class="p">Dashboard</p></a></li>
                    <div class="separator"></div>
                    <li>
                        <a href="#" id="1"><p class="p"><i class="fa-solid fa-toolbox"></i> Cliente</p><span class="fas fa-caret-down"></span> </a>
                        <ul class="item-show-1">
                            <div class="separator"></div>

                            <li><a asp-controller="Cliente" asp-action="Index"><p class="p"><i class="fa-solid fa-user"></i>Lista Clientes</p></a></li>

                        </ul>
                    </li>
                    <div class="separator"></div>
                    <li>
                        <a href="#" id="2"><p class="p"><i class="fa-solid fa-toolbox"></i> Venta</p><span class="fas fa-caret-down"></span> </a>
                        <ul class="item-show-2">
                            <div class="separator"></div>

                            <li><a asp-controller="Factura" asp-action="Create"><p class="p"><i class="fa-solid fa-user"></i>Nueva Venta</p></a></li>
                            <li><a asp-controller="Factura" asp-action="Index"><p class="p"><i class="fa-solid fa-user"></i>Lista Ventas</p></a></li>
                        </ul>
                    </li>
                    <div class="separator"></div>
                    <li>
                        <a href="#" id="3"><p class="p"><i class="fa-solid fa-toolbox"></i> Producto</p><span class="fas fa-caret-down"></span> </a>
                        <ul class="item-show-3">
                            <div class="separator"></div>

                            <li><a asp-controller="Producto" asp-action="Index"><p class="p"><i class="fa-solid fa-user"></i>Lista Producto</p></a></li>

                        </ul>
                    </li>



                </ul>
            </nav>
        </div>
        <div id="principal" class="principal ">
            <div>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
      
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
