<div id="exampleModal" class="modal fade ">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Buscar Producto</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <br />
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-10 col-lg-8">
                            <form class="card card-sm">
                                <div class="card-body row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <i class="fas fa-search h4 text-body"></i>
                                    </div>

                                    <div class="col">
                                       
                                        <input required   class="form-control form-control-lg form-control-borderless"  type="search" id="parametroProducto" placeholder="Codigo, Nombre, Descriopcion"  />
                                    
                                    </div>

                                    <div class="col-auto">
                                        <button onclick="buscarProducto()" class="btn btn-lg btn-success"> Buscar</button>
                                    </div>

                                </div>
                            </form>
                        </div>

                    </div>
                    <div class="row">
                        <table id="tbProducto" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Codigo</th>
                                    <th>Categoria</th>
                                    <th>Nombre</th>
                                    <th>Precio</th>
                                    <th>Seleccionar</th>
                                </tr>
                            </thead>
                            <tbody class="table-success"></tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
