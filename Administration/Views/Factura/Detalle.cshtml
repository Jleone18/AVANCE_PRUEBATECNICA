@model Administration.Models.FacturaCompletaVm

@{
    ViewData["Title"] = "Detalle";
}

<div class="row mt-2">
    <div class="col-sm-12">
        <div class="card border-primary">
            <div class="card-body p-2">
                <h6 class="card-title mb-1 text-primary">Detalle cliente</h6>
                <div class="row align-items-end">


                    <input type="text" hidden id="txtClienteId">

                    <div class="col-sm-3">
                        <div class="form-group mb-0">
                            <label class="col-form-label col-form-label-sm">Numero Documento: <span class="required">*</span> </label>
                            <input asp-for="Cliente.Identificacion" type="text" class="form-control form-control-sm model" id="txtclientedocumento" readonly name="RazonSocial" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group mb-0">
                            <label class="col-form-label col-form-label-sm">Nombres: <span class="required">*</span></label>
                            <input asp-for="Cliente.Nombre" type="text" class="form-control form-control-sm model" id="txtclientenombres" readonly name="RazonSocial" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group mb-0">
                            <label class="col-form-label col-form-label-sm">Direccion:</label>
                            <input asp-for="Cliente.Direccion" type="text" class="form-control form-control-sm model" id="txtclientedireccion" readonly name="clientedireccion" autocomplete="off">
                        </div>
                    </div>

                </div>
                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group mb-0">
                            <label for="txtRazonSocialProveedor" class="col-form-label col-form-label-sm">Telefono:</label>
                            <input asp-for="Cliente.Telefono" type="text" class="form-control form-control-sm model" id="txtclientetelefono" readonly name="Telefono" autocomplete="off">
                        </div>
                      
                    </div>
                    <div class="col-sm-5">

                        <div class="form-group mb-0">
                            <label class="col-form-label col-form-label-sm">Fecha:*</label>
                            <input asp-for="Fecha" type="date" class="form-control form-control-sm model" id="fechaFactura" readonly name="FechaFactura" autocomplete="off">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




<hr />
<div class="row">
    <div class="col-sm-12"><h6 class="text-primary">Detalle Productos</h6></div>
</div>
<div class="row mt-3">
    <div class="col-sm-12">
        <div class="table-responsive-sm">
            <table id="tbVenta" class="table table-striped table-bordered nowrap table-sm" style="width:100%">
                <thead>
                    <tr>

                        <th class=" bg-primary text-white">Cantidad</th>
                        <th class="bg-primary text-white">Producto</th>
                        <th class=" bg-primary text-white">Descripcion</th>
                        <th class="t bg-primary text-white">Precio Unidad</th>
                        <th class=" bg-primary text-white">Importe Total</th>
                        <th class=" bg-primary text-white"></th>
                    </tr>
                </thead>
                <tbody id="tbodyVenta">
                    @{ foreach (var detalle in Model.Detalles)
                        {
                            <tr>

                                <th>@detalle.Cantidad</th>
                                <th>@detalle.Producto.Nombre</th>
                                <th>@detalle.Producto.Descripcion</th>
                                <th>@detalle.Precio</th>
                                <th>@detalle.Subtotal</th>
                                <th></th>
                            </tr>

                        } }
                </tbody>
            </table>
        </div>

    </div>
</div>





<hr />
<div class="row">
    <div class="col-sm-10">

    </div>
    <div class="col-sm-2">
        <div class="row">
            <div class="col-sm-10">
                <div class="input-group input-group-sm mb-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text bg-primary text-white">Sub Total </label>
                    </div>
                    <input asp-for="Subtotal" id="txtsubtotal" readonly type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                <div class="input-group input-group-sm mb-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text bg-primary text-white" for="inputGroupSelect01">Total Iva </label>
                    </div>
                    <input asp-for="TotalIva" id="txttotalIva" readonly type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
                <div class="input-group input-group-sm mb-2">
                    <div class="input-group-prepend">
                        <label class="input-group-text bg-primarytext-white" for="inputGroupSelect01">Total.</label>
                    </div>
                    <input asp-for="Total" readonly id="txtmontoFactura" type="text" class="form-control">
                </div>
            </div>


        </div>

    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <button type="button" class="btn btn-sm btn-primary btn-block text-center"><i class="fas fa-print"></i>  IMPRIMIR</button>
    </div>
</div>




<div id="modalBuscador">
</div>





